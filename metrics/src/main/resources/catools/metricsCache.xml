<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="ehcache.xsd" updateCheck="true"
         monitoring="autodetect" dynamicConfig="true">

    <diskStore path="java.io.tmpdir/perf_metrics"/>

    <cache name="project" maxEntriesLocalHeap="10" eternal="true">
        <persistence strategy="localTempSwap"/>
    </cache>

    <cache name="environment" maxEntriesLocalHeap="10" eternal="true">
        <persistence strategy="localTempSwap"/>
    </cache>

    <cache name="metric_metadata" maxEntriesLocalHeap="1000" eternal="true">
        <persistence strategy="localTempSwap"/>
    </cache>

</ehcache>